<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainView"
            type="com.mamits.apnaonlines.viewmodel.activity.MainActivityViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.activity.MainActivity">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img_logo"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="bottom"
            android:orientation="vertical">

            <com.mamits.apnaonlines.ui.customviews.CustomTextView
                android:id="@+id/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="@string/login_nas_vendor"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                app:fontName="Raleway-Medium.ttf" />

            <LinearLayout
                android:id="@+id/ll_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/edit_text_back"
                android:orientation="vertical">

                <com.mamits.apnaonlines.ui.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="@string/mobile_no_or_email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    app:fontName="Raleway-Light.ttf" />

                <com.mamits.apnaonlines.ui.customviews.CustomInputEditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:background="@null"
                    android:hint="@string/mobile_no_or_email"
                    android:padding="@dimen/_5sdp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/_17ssp"
                    app:fontName="Raleway-Light.ttf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/edit_text_back"
                android:orientation="vertical">

                <com.mamits.apnaonlines.ui.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="@string/enter_your_pin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    app:fontName="Raleway-Light.ttf" />

                <com.mamits.apnaonlines.ui.customviews.CustomInputEditText
                    android:id="@+id/et_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:background="@null"
                    android:hint="@string/hint_pin"
                    android:inputType="numberPassword"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_hint"
                    android:textSize="@dimen/_17ssp"
                    android:maxLength="6"
                    app:fontName="Raleway-Light.ttf" />
            </LinearLayout>

            <com.mamits.apnaonlines.ui.customviews.CustomTextView
                android:id="@+id/btn_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="@string/forgot_pin_click_here"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:fontName="Raleway-SemiBold.ttf" />


            <RelativeLayout
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/sky_blue">

                <com.mamits.apnaonlines.ui.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    app:fontName="Raleway-Medium.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/sky_blue"
                android:padding="@dimen/_1sdp">

                <com.mamits.apnaonlines.ui.customviews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/sky_blue"
                    android:textSize="@dimen/_15ssp"
                    app:fontName="Raleway-Medium.ttf" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</layout>